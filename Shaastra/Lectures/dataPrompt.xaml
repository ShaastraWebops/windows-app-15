<UserControl x:Class="Shaastra.Lectures.dataPrompt"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="600" d:DesignWidth="450">

    <Grid Height="600" Width="450" x:Name="LayoutRoot">
        <Border Background="LightGray" BorderBrush="Gray" BorderThickness="5" CornerRadius="18,18,18,18"/>
        <Image x:Name="face" Source="Assets/sample.jpg" Margin="0,137,0,128"/>
        <TextBlock TextWrapping="Wrap" Style="{StaticResource LongListSelectorGroupHeaderLetterTileStyle}" x:Name="personName"  Text="Stephen Wolfram" FontSize="47" Foreground="DarkSlateGray" Margin="12,0,85,468"/>
        <Grid Margin="370,0,5,525">
            <Image x:Name="cancel" Width="75" Height="75" Source="Assets/cancel.png"/>
        </Grid>
        <Button x:Name="detailer" Foreground="Black"  Content="Details" Height="80" Margin="10,500,229,20"/>
        <Button x:Name="exit" Foreground="Black" Content="Exit" Height="80" Margin="226,500,10,20"/>
    </Grid>
</UserControl>